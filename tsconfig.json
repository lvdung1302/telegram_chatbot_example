{
  "compilerOptions": {
    "target": "ES2020",                      // Hỗ trợ async/await tốt hơn
    "module": "CommonJS",                   // Node.js xài CommonJS
    "esModuleInterop": true,                // Cho phép import mặc định từ node-fetch@2
    "moduleResolution": "node",             // Dành cho import từ node_modules
    "skipLibCheck": true,                   // Bỏ qua check types trong thư viện
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "outDir": "dist"                        // Nơi xuất file .js sau khi build
  },
  "include": ["*.ts", "tools/**/*.ts"]
}
